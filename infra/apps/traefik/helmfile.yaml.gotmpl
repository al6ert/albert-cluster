environments:
  minikube: {}
  netcup: {}

---
repositories:
  - name: traefik
    url: https://traefik.github.io/charts 

releases:
  - name: traefik
    namespace: traefik
    createNamespace: true
    chart: traefik/traefik
    version: {{ env "TRAEFIK_CHART_VERSION" }}
    values:
      - values.yaml
      - ../../envs/{{ .Environment.Name }}/traefik-values.yaml
    wait: true
    timeout: 900
    atomic: true

